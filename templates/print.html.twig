<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>{{ atendimento.senha }}</title>
    <link type="text/css" rel="stylesheet" href="{{ baseUrl() }}/css/style.css?v={{ version }}" />
    <link type="text/css" rel="stylesheet" href="{{ baseUrl() }}/css/bootstrap.min.css?v={{ version }}" />
    <link type="text/css" rel="stylesheet" href="{{ baseUrl() }}/css/print.css?v={{ version }}" />
    <link rel="shortcut icon" href="images/favicon.png" />
</head>
<body onload="window.print()">
    <div id="senha">
        <div id="logo">
            <img src="{{baseUrl()}}/images/logoAracoop.png" alt="qrcode" width="120"/>
        </div>
        <b>----------------------------------------------------------------</b>
        <div id="senha-header">
            {{ atendimento.unidade.nome }}<br />
        </div>
        {% if atendimento.usuarioReference %}
        <b>----------------------------------------------------------------</b>
        <div id="senha-gerente">
            <span>Gerente</span>
            {{ atendimento.usuarioReference }}<br />
        </div>
        {% endif %}
        <b>----------------------------------------------------------------</b>
        <div id="senha-body">
            {{ atendimento.senha }}
            <span class="descricao">
                {{ atendimento.senha.prioridade.nome }}
            </span>
        </div>
        <div id="senha-footer">
            {{ atendimento.nomeCliente }}
        </div>
        <b>----------------------------------------------------------------</b>
        <div id="">
            <span>Avalie nosso atendimento</span>
        </div>
        <div id="qrcode">
            <img src="{{baseUrl()}}/images/qrcode.png" alt="qrcode" width="100"/>
        </div>
        <b>----------------------------------------------------------------</b>
        <span class="data">{{ now|date('d/m/Y H:i') }}</span>
    </div>
    
</body>
</html>